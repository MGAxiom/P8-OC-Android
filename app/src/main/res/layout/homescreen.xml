<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:autofillHints="name"
            android:background="@drawable/rounded_edittext"
            android:drawableEnd="@drawable/magnify_icon"
            android:hint="@string/hint_home_screen"
            android:inputType="textPersonName"
            android:padding="15dp" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:tabIndicator="@color/material_dynamic_neutral0"
            app:tabTextColor="@color/material_dynamic_primary10">

            <com.google.android.material.tabs.TabItem
                android:text="@string/tous"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:textAllCaps="false"
                />

            <com.google.android.material.tabs.TabItem
                android:text="@string/favoris"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:textAllCaps="false" />

        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</FrameLayout>